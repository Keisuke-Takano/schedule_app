<div class="main_container">
<div class="information">
<h2>スケジュール一覧</h2>

</div>
<table>
<thead>
    <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
    </tr>
</thead>

<tbody>
            <tr>
                <% @posts.each do |post| %>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= post.start_date %></td>
                <td><%= post.finish_date %></td>
                <td>
                    <% if post.check == true %>
                    <%= "○" %>
                    <% else %>
                    <%= "" %>
                    <% end %>                
                </td>
                <td><%= post.updated_at %></td>
                <td>
                    <%= link_to("確認", "/#{post.id}") %>
                </td>
                <td>
                      <%= link_to("編集", "#{post.id}/edit") %>
                </td>
                <td>
                    <%= button_to("削除", "#{post.id}/destroy",data: { confirm: '本当に削除しますか？'}) %> 
                </td>
            </tr>
            <% end %>
</tbody>
</table>

<p><%= link_to("スケジュール新規登録", "/new") %></p>
</div>

