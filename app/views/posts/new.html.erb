<div class="main_container">
    <div class="information">
    <h2>スケジュール新規作成</h2>
    </div>
</div>

<div>
  <%= form_with url: "/create" do |f| %>
    <form>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_date ,"開始日" %></th>
          <td><%= f.date_field :start_date %></td>
        </tr>
       
        <tr>
          <th><%= f.label :finish_date ,"終了日" %></th>
          <td><%= f.date_field :finish_date %></td>
        </tr>

        <tr>
            <th><%= f.label :finish_date ,"終日" %></th>
            <td><%= f.check_box :check, id: :samurai_checkbox_example,:as => :boolean,checked:false %>終日の場合はチェックをいれます</td>
        </tr>
 
        <tr>
          <th><%= f.label :memo,"メモ" %></th>
          <td><%= f.text_area :memo %></td>
        </tr>
      </table>
    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to("スケジュール一覧に戻る", "/") %></a></li>
        </ul>
    </div>
  </form>
  <% end %>

</div>