<div class="main_container">
<table> 
    <tr>
        <th>ID</th>
        <td><%= @post.id %></td>
    </tr>
    <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @post.start_date %></td>
    </tr>
    <tr>
        <th>投稿日時</th>
        <td><%= @post.created_at %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td>
        <% if @post.check == true %>
        <%= "○" %>
        <% else %>
        <%= "" %>
        <% end %>                
        </td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><pre><%= @post.memo %></pre></td>
    </tr>
</table>
</div>

<ul>
    <li><%= link_to("スケジュール一覧に戻る", "/") %></li>
    <li><%= link_to("スケジュールを編集する", "/#{@post.id}/edit") %></li>
    <li>
        <%= button_to("スケジュールを削除する", "/#{@post.id}/destroy",data: { confirm: '本当に削除しますか？'})%>
    </li>
</ul>

